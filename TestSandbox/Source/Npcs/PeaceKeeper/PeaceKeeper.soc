app PeaceKeeper
{
    idle actions
    {
        {: >: { direction($x1,#@(place & color = green)) & $x1 = go(someone,self) } o: 1 :}/*[: timeout=1000 :]*/;
    }

    fun go(@direction)
    {
        'Begin go()' >> @>log;
        @direction >> @>log;
        wait 1000;

        'End go()' >> @>log;
    }

    on Enter =>
    {
        'Begin' >> @>log;
        'End' >> @>log;
    }
}


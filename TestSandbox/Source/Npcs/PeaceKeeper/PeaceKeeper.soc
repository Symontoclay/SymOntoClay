app PeaceKeeper
{
    fun a() => 
    {
        '`a` has been called!' >> @>log;

        wait 10;

        'End `a`' >> @>log;
    }

    fun b() => 
    {
        '`b` has been called!' >> @>log;

        wait 10;

        'End `b`' >> @>log;
    }

    on Enter =>
    {
        'Begin' >> @>log;

        @a = a~~()[: timeout = 1 :];
        @b = b~~()[: timeout = 1 :];

        wait @a, @b;

        'End' >> @>log;
    }
}
